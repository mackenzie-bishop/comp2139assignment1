@model SmartInventory.Models.ProductCategoryViewModel

@{
    ViewData["Title"] = "Manage Products & Categories";
}

<h2>@ViewData["Title"]</h2>

<p>Here you can manage your products and categories.</p>


<h3>Categories</h3>
@if (Model.Categories != null && Model.Categories.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                      
                        <a href="#">Edit</a> | <a href="#">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No categories found.</p>
}


<h3>Products</h3>
@if (Model.Products != null && Model.Products.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category?.Name</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found.</p>
}
