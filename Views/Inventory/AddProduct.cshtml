@model SmartInventory.Models.Product

@{
    ViewData["Title"] = "Add New Product";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="AddProduct">
    <div>
        <label>Name:</label>
        <input type="text" name="Name" required />
    </div>
    <div>
        <label>Category:</label>
        <select name="CategoryId" required>
            @foreach (var category in ViewBag.Categories as List<SmartInventory.Models.Category> ?? new List<SmartInventory.Models.Category>())
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <div>
        <label>Price:</label>
        <input type="number" name="Price" step="0.01" required />
    </div>
    <div>
        <label>Quantity In Stock:</label>
        <input type="number" name="QuantityInStock" required />
    </div>
    <button type="submit">Add Product</button>
</form>

